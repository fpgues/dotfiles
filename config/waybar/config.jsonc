{
	"layer": "top",
	"position": "top",
	"height": 27,

   "modules-left": [
        "hyprland/workspaces",
        "hyprland/mode",
        "custom/spotify"
        //"hyprland/window"
    ],

   "modules-center": [
     "clock"
    ],
        
    "modules-right": [
        //"bluetooth",
        "network",
        "cpu",
        "disk",
        "memory",
        "custom/packages",
        "pulseaudio", 
        "tray",
        "group/group-end",
        "group/group-power"
    ],

//###############################
//#-------CUSTONS---------------#
//###############################

    "custom/weather": {
	    "format": "{}",
	    "exec": "$HOME/.config/Scripts/hyprland/weather",
	    "interval": 1800,
	},

    "custom/update": {
	    "format": "{}",
	    "exec": "$HOME/.config/Scripts/hyprland/Void-Updates",
	    "interval": 1800,
	},
	
